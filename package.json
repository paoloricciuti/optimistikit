{
	"name": "optimistikit",
	"version": "0.0.6",
	"repository": "git+https://github.com/paoloricciuti/optimistikit.git",
	"author": "Paolo Ricciuti",
	"license": "MIT",
	"homepage": "https://github.com/paoloricciuti/optimistikit",
	"keywords": [
		"sveltekit",
		"svelte",
		"optimistic",
		"optimistic ui",
		"optimistic update"
	],
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run package",
		"preview": "vite preview",
		"package": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "npm run package",
		"test": "npm run test:integration && npm run test:unit",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"test:integration": "playwright test",
		"test:integration:ui": "playwright test --ui",
		"test:unit": "vitest",
		"build:playground": "cd playground && pnpm install --frozen-lockfile && pnpm run build",
		"preview:playground": "cd playground && pnpm run preview",
		"changeset": "changeset",
		"release": "pnpm run build && changeset publish $(echo \"$RELEASE_TAG\")"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"@sveltejs/kit": "^1.0.0 || ^2.0.0",
		"svelte": "^4.0.0 || ^5.0.0"
	},
	"devDependencies": {
		"@changesets/cli": "^2.27.1",
		"@playwright/test": "^1.42.1",
		"@sveltejs/adapter-auto": "^3.1.1",
		"@sveltejs/kit": "^2.5.4",
		"@sveltejs/package": "^2.3.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.2",
		"@types/eslint": "^8.56.5",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.43.0",
		"globals": "^15.8.0",
		"prettier": "^3.2.5",
		"prettier-plugin-svelte": "^3.2.2",
		"publint": "^0.2.0",
		"svelte": "^4.2.12",
		"svelte-check": "^3.6.7",
		"tslib": "^2.6.2",
		"typescript": "^5.4.2",
		"typescript-eslint": "8.0.0-alpha.52",
		"vite": "^5.1.6",
		"vitest": "^2.0.0"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module"
}
